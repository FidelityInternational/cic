#!/usr/bin/env bash

CURRENT_PATH="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
# shellcheck source=bin/support/sh/functions/cic_docker.sh
source "${CURRENT_PATH}/support/sh/functions/cic_docker.sh"
# shellcheck source=bin/support/sh/functions/cic.sh
source "${CURRENT_PATH}/support/sh/functions/cic.sh"

exercise_name="$(basename "$(pwd)")"
volume_path="$(volume_path ansible)/${exercise_name}"

copy_to_cic_volume "$(pwd)/." "${volume_path}"

# shellcheck disable=SC2016
rbenv_init='eval "$(rbenv init -)"'
export_command='. /cic/bin/.env'
exports="SCAFFOLD_STRUCTURE=/cic/.cic/exercise_scaffold.yml SCAFFOLD_PATH=/cic/.cic/exercise_scaffold"
command="${rbenv_init} && ${export_command} && $(cic_exports) ${exports} /cic/bin/support/ruby/bin/exercise $*"

docker run \
    --network "$(cic_network)" \
    --volumes-from "$(cic_volumes_container)" \
    -v /var/run/docker.sock:/var/run/docker.sock \
    -v "$(tracks_path)":/cic/tracks \
    -v "${CURRENT_PATH}/../.cic":/cic/.cic \
    -w "${volume_path}" \
    "$(cic_image)" \
    /bin/bash -c "${command}"

docker cp "$(cic_volumes_container):${volume_path}/." .